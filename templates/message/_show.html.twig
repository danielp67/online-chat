{% if message.user.id == user.id  %}
    <div class="card col-6  border-primary offset-6">
        <div class="card-header">
            {{ message.user.username }}
            {{  message.createdAt|date('Y-m-d H:i:s') }} -

            <a href="{{ path('app_message_edit', {'id': message.id, 'roomId': room.id }) }}">
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>

            {{ include('message/_delete_form.html.twig') }}
        </div>
        <div class="card-body">
            <p class="card-text">{{ message.content }}</p>
        </div>
    </div>
{% else %}
    <div class="card col-6">
        <div class="card-header">
            {{ message.user.username }}
            {{  message.createdAt|date('Y-m-d H:i:s') }}
        </div>
        <div class="card-body">

            <p class="card-text">{{ message.content }}</p>
        </div>
    </div>

{% endif %}
